{
"title": "Switch desktop with right option & control",
"rules": [
    {
    "description": "Maps right option to left desktop switch, right control to right desktop switch",
    "manipulators": [
        {
        "type": "basic",
        "from": {
            "key_code": "right_option"
        },
        "to": [
            {
            "key_code": "left_arrow",
            "modifiers": "left_control"
            }
        ]
        },
        {
        "type": "basic",
        "from": {
            "key_code": "right_control"
        },
        "to": [
            {
            "key_code": "right_arrow",
            "modifiers": "left_control"
            }
        ]
        }
    ]
    }
]
}